library ieee;
use ieee.std_logic_1164.all;

entity bitextender is
    
    port (
        A: in std_logic_vector(3 downto 0);
        O: out std_logic_vector(10 downto 0)
    ) ;
end bitextender;
architecture behavior of bitextender is

begin
alu : process( A )
begin
a := A(7);
if a ='0' then
O <= "0000000"&A;
elsif a ='1' then 
O <=  "1111111"&A;
end if;

end process ; -- alu
end behavior;